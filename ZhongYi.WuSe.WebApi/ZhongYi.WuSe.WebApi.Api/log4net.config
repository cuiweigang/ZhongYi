<log4net>
  <appender name="All_LogFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="Logs\ALL\" />
    <appendToFile value="true" />
    <!-- 切割最多文件数 -1表示不限制产生日志文件数-->
    <param name="MaxSizeRollBackups" value="-1"/>
    <!-- 每个文件的大小限制  -->
    <param name="MaximumFileSize" value="10MB"/>
    <!-- RollingStyle Composite 综合  Size 按大小  Date 按时间 -->
    <param name="RollingStyle" value="Composite" />
    <param name="DatePattern" value="&quot;Logs_Info_&quot;yyyyMMdd&quot;.txt&quot;" />
    <staticLogFileName value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <header value="------------------------------------------------------------&#xD;&#xA;" />
      <ConversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline%newline%newline" />
    </layout>
  </appender>
  <appender name="Info_LogFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="Logs\INFO\" />
    <appendToFile value="true" />
    <!-- 切割最多文件数 -1表示不限制产生日志文件数-->
    <param name="MaxSizeRollBackups" value="-1"/>
    <!-- 每个文件的大小限制  -->
    <param name="MaximumFileSize" value="10MB"/>
    <!-- RollingStyle Composite 综合  Size 按大小  Date 按时间 -->
    <param name="RollingStyle" value="Composite" />
    <param name="DatePattern" value="&quot;Logs_INFO_&quot;yyyyMMdd&quot;.txt&quot;" />
    <staticLogFileName value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <header value="------------------------------------------------------------&#xD;&#xA;" />
      <ConversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline%newline%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="INFO" />
      <param name="LevelMax" value="INFO" />
    </filter>
  </appender>
  <appender name="Error_LogFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="Logs\ERROR\" />
    <appendToFile value="true" />
    <!-- 切割最多文件数 -1表示不限制产生日志文件数-->
    <param name="MaxSizeRollBackups" value="-1"/>
    <!-- 每个文件的大小限制  -->
    <param name="MaximumFileSize" value="10MB"/>
    <!-- RollingStyle Composite 综合  Size 按大小  Date 按时间 -->
    <param name="RollingStyle" value="Composite" />
    <param name="DatePattern" value="&quot;Logs_Error_&quot;yyyyMMdd&quot;.txt&quot;" />
    <staticLogFileName value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <header value="------------------------------------------------------------&#xD;&#xA;" />
      <ConversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline%newline%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="Error" />
      <param name="LevelMax" value="Error" />
    </filter>
  </appender>
  <appender name="Android_LogFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="Logs\Android\" />
    <appendToFile value="true" />
    <!-- 切割最多文件数 -1表示不限制产生日志文件数-->
    <param name="MaxSizeRollBackups" value="-1"/>
    <!-- 每个文件的大小限制  -->
    <param name="MaximumFileSize" value="10MB"/>
    <!-- RollingStyle Composite 综合  Size 按大小  Date 按时间 -->
    <param name="RollingStyle" value="Composite" />
    <param name="DatePattern" value="&quot;Logs_Error_&quot;yyyyMMdd&quot;.txt&quot;" />
    <staticLogFileName value="false" />
    <layout type="log4net.Layout.PatternLayout">
      <header value="------------------------------------------------------------&#xD;&#xA;" />
      <ConversionPattern value="%date &#13;&#10; - %message%newline%newline%newline" />
    </layout>
    <filter type="log4net.Filter.LevelRangeFilter">
      <param name="LevelMin" value="Error" />
      <param name="LevelMax" value="Error" />
    </filter>
  </appender>
  <logger name="AndroidLogger" additivity="false">
    <appender-ref ref="Android_LogFileAppender" />
  </logger>

  <root>
    <level value="ALL" />
    <appender-ref ref="Info_LogFileAppender" />
    <appender-ref ref="Error_LogFileAppender" />
    <appender-ref ref="All_LogFileAppender" />
  </root>
</log4net>